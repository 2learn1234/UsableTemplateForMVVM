package com.example.template.koin

package com.example.template.koin

import androidx.room.Room
import com.example.template.database.TempDatabase
import com.example.template.repository.TemplateRepo
import com.example.template.tempViewModel.TempViewModel
import org.koin.android.ext.koin.androidApplication
import org.koin.androidx.viewmodel.dsl.viewModel
import org.koin.dsl.module

val appModule= module {
    single {
        Room.databaseBuilder(
            androidApplication(),
            TempDatabase::class.java,
            "myTempsDB"
        ).fallbackToDestructiveMigration().build()

    }

    single<TemplateRepo> {
        TemplateRepo(get())
    }

    viewModel {
        TempViewModel(get())
    }
}
//=================
package com.example.template

import android.app.Application
import com.example.template.koin.appModule
import org.koin.android.ext.koin.androidContext
import org.koin.core.context.startKoin

class TempsApp: Application() {

    override fun onCreate() {
        super.onCreate()
        startKoin {
            androidContext(this@Template)
            modules(appModule)
        }
    }
}
